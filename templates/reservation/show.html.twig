{% extends 'basefront.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    {{ include('head.html.twig') }}

    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ reservation.destination }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ reservation.dateDebut ? reservation.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ reservation.dateFin ? reservation.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nombres_personnes</th>
                <td>{{ reservation.nombresPersonnes }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ reservation.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>

    {{ include('reservation/_delete_form.html.twig') }}

    {{ include('footer.html.twig') }}
{% endblock %}
