<form method="post" action="{{ path('messenger_delete', {'id': messenger.id}) }}" onsubmit="return confirm('Are you sure you want to delete this message?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ messenger.id) }}">
    <button class="btn">Delete</button>
</form>
